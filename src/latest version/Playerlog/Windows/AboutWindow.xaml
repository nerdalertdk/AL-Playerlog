        <TextBlock Margin="256,10,0,0" HorizontalAlignment="Left" Width="227" Height="229" VerticalAlignment="Top" TextAlignment="Center">
            <Bold FontSize="20">
                <Underline>Altis Life Playerlog</Underline>
            </Bold>
            <LineBreak/><LineBreak/>
            <Bold FontSize="14">
                <Underline FontSize="16">Programmer</Underline>
                <LineBreak/>Njahs
            </Bold>
            <LineBreak/><LineBreak/>
            <Bold FontSize="14">
                <Underline FontSize="16">Conception</Underline>
                <LineBreak/>Njahs
            </Bold>
            <LineBreak/><LineBreak/>
            <Bold FontSize="12">
                <Underline FontSize="16">Special thanks</Underline>
                <LineBreak/>Microsoft for D3 and .NET 4.5
                <LineBreak/>Brian Lagunas for Metro Theme
            </Bold>
        </TextBlock>
